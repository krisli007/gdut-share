/* miniprogram/pages/prodlist/prodlist.wxss */

page {
    height: 100%;
}

.container {
    height: 100%;
    padding: 30rpx 0;
    box-sizing: border-box;
    overflow-y: scroll;
}

.prod-item {
    position: relative;
    margin: 40rpx;
    margin-bottom: 0;
    padding: 20rpx;
    border-radius: 16rpx;
    background-color: #fff;
    box-shadow: inset 0 0 15rpx 0 #ddd;
}

.item-img {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.title {
    font-size: 30rpx;
    font-weight: 600;
    height: 40rpx;
    line-height: 40rpx;
}

.real-amount {
    color: #cc1c1c;
}

.lcs-info {
    font-size: 24rpx;
    color: #5c5c5c;
}

.more {
    text-align: right;
    color: #979797;
    font-size: 26rpx;
}

.new-com-msg {
    position: absolute;
    bottom: 20rpx;
    left: 240rpx;
    font-size: 26rpx;
    color: #1296bd;
}
