/**index.wxss**/
page {
  position: relative;
  padding: 0 60rpx;
  box-sizing: border-box;
}
.info-box {
  margin: 120rpx 0;
}
.send-btn {
  position: fixed;
  top: 0;
  width: 630rpx;
  height: 120rpx;
  z-index: 2;
  display: flex;
  align-items: center;
}
input {
  padding: 20rpx 0;
  margin: 20rpx 0;
  border-top: 2rpx solid #eee;
  border-bottom: 2rpx solid #eee;
}
