.placeholder {
  color: #000;
}
.input-detail {
  height: 180rpx;
  overflow-y: scroll;
}
.chose-img { 
  background: #eee url('http://www.krislee.xyz/mini/add.png') no-repeat center center;
  background-size: 30%;
}
.img-list {
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.img-item {
  position: relative;
}
.img,
.chose-img {
  margin-top: 10rpx;
  margin-right: 10rpx;
  width: 200rpx;
  height: 200rpx;
}
.delete-img {
  position: absolute;
  top: 15rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}