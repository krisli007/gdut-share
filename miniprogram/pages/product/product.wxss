/* miniprogram/pages/product/product.wxss */
page {
  height: 100%;
}
.page {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.top{
  height: 100rpx;
  padding: 0 40rpx;
  border-bottom: 2rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.top-left {
  display: flex;
  align-items: center;
}
.top-right {
  font-size: 20rpx;
  color: #aaa;
}
.avatar {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}
.middle {
  flex: 1;
  overflow-y: scroll;
}
.real-amount,
.title,
.detail {
  padding: 10rpx 20rpx;
  display: block;
}
.real-amount {
  padding-top: 20rpx;
  color: #f50;
}

/* 评论模块 */
input {
  height: 80rpx;
  padding: 0 20rpx;
}
.comment-box {
  margin-top: 20rpx;
  background-color: #fff;
}
.comment-title {
  padding: 20rpx 30rpx;
  font-weight: 700;
  display: block;
}
.com-item {
  padding: 0 30rpx 20rpx 20rpx;
  border-top: 2rpx solid #f8f8f8;
  display: flex;
  align-items: flex-start;
}
.c-avatar {
  width: 64rpx;
  height: 64rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}
.com > .right {
  flex: 1;
}
.com .right-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.com .nickname {
  color: #324277;
  font-weight: 600;
}
.com .date {
  font-size: 20rpx;
  color: #aaa;
}
.com .content {
  font-size: 28rpx;
}

/* 底部提示 */
.btm-tip {
  height: 120rpx;
  color: #dfdfdf;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-evenly;
}

/* 底部操作栏 */
.bottom {
  padding: 0 30rpx 0 0;
  height: 120rpx;  
  border-top: 2rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: space-between;

}
.btm-left {
  width: 345rpx;
  font-size: 24rpx;
  color: #bfbfbf;
  display: flex;
  justify-content: space-between;
}
.btm-left > view {
  width: 115rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}
.btm-left > view > image {
  width: 50rpx;
  height: 50rpx;
}

.btm-right {
  width: 200rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #f3f3f3;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}
.manage {
  background: linear-gradient(to left, #5B86E5, #36D1DC);
}
.want {
  background: linear-gradient(to left, #8e44ad, #c0392b);
}