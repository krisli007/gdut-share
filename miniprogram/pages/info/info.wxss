/* pages/info/info.wxss */

/* 
  修改button样式，需要在button标签内“size="default"”
  button[size] {
    样式
  }
 */
button[size] {
  background-color: #1296db;
  border: 2rpx solid #eee;
  border-radius: 20rpx;
  color: #eee;
}
.userinfo {
  height: 200rpx;
  width: 100%;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  background-color: #1296db;
  display: flex;
  /* justify-self: flex-start; */
  justify-content: space-evenly;
  align-items: center
}
.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.user-name {
  color: #eee;
}
.logo {
  width: 70rpx;
  height: 70rpx;
}
.flex-r {
  display: flex;
  justify-content: space-evenly;
}
.flex-v {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
}
.per-prod-box {
  height: 160rpx;
  color: #5c5c5c;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 2rpx 2rpx 15rpx 0 #eee;
}
.per-prod-box > view {
  width: 200rpx;
}