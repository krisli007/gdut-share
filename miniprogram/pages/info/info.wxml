<!--pages/info/info.wxml-->


<view class="userinfo">
  <open-data type="userAvatarUrl" wx:if="{{loginStatus}}" class="user-avatar"></open-data>
  <open-data type="userNickName" wx:if="{{loginStatus}}" class="user-name"></open-data>

  <button open-type="getUserInfo" wx:else bindgetuserinfo="getUserInfo" size="default">点击登录</button>
</view>

<view class="flex-r per-prod-box global-margin-40">
  <view class="flex-v" data-index="0" bindtap="toUserProdListUrl">
    <image src="../../images/info/publish.png" class="logo"></image>
    我发布的 {{loginStatus ? sendProduct.length : 0}}
  </view>
  <view class="flex-v" data-index="1" bindtap="toUserProdListUrl">
    <image src="../../images/info/sale.png" class="logo"></image>
    我卖出的 {{loginStatus ? saleProduct.length : 0}}
  </view>
</view>

<view class="flex-r per-prod-box global-margin-40">
  <view class="flex-v" data-index="2" bindtap="toUserProdListUrl">
    <image src="../../images/info/buy.png" class="logo"></image>
    我买到的 {{loginStatus ? buyProduct.length : 0}}
  </view>
  <view class="flex-v" data-index="3" bindtap="toUserProdListUrl">
    <image src="../../images/info/star.png" class="logo"></image>
    我的收藏 {{loginStatus ? starProduct.length : 0}}
  </view>
</view>
