/* miniprogram/pages/userpage/userpage.wxss */

page {
    height: 100%;
}

.inner-box {
    height: 100%;
}

.userinfo {
    position: relative;
    height: 200rpx;
    width: 100%;
    padding-left: 80rpx;
    padding-right: 80rpx;
    color: #eee;
    box-sizing: border-box;
}

.user-avatar {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
    border-radius: 8rpx;
    overflow: hidden;
}

.care-btn {
    padding: 10rpx;
    background-color: #fff;
    box-shadow: 0 0 15rpx 0 #ccc;
    border-radius: 16rpx;
    color: #1296db;
}

/* 粉丝关注 */

.fans-box {
    margin-bottom: 40rpx;
    height: 100rpx;
    font-size: 28rpx;
    color: #5c5c5c;
    background-color: #fff;
    border-radius: 40rpx;
    box-shadow: 0rpx 0rpx 30rpx 0 #ccc;
}

.fans-box > view {
    width: 200rpx;
}

/* 发布 */

.title {
    margin-bottom: 20rpx;
    font-size: 36rpx;
    font-weight: 600;
    color: #1296db;
}

.pord-list-box {
    overflow-y: scroll;
    margin-bottom: 60rpx;
}

.prod-item {
    margin: 40rpx;
    margin-bottom: 0;
    padding: 20rpx;
    border-radius: 16rpx;
    background-color: #fff;
    box-shadow: inset 0 0 15rpx 0 #ddd;
}

.item-img {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.pro-title {
    font-size: 30rpx;
    font-weight: 600;
    height: 40rpx;
    line-height: 40rpx;
}

.real-amount {
    color: #cc1c1c;
}

.lcs-info {
    font-size: 24rpx;
    color: #5c5c5c;
}

.more {
    text-align: right;
    color: #6c6c6c;
}
